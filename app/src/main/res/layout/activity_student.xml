<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".StudentActivity"
android:orientation="vertical">


<LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="72dp">

    <TextView
            android:text="学生管理"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:textSize="30sp"
            android:gravity="center"
            android:background="#E67350"
            android:id="@+id/textview"
            android:layout_weight="1" />

</LinearLayout>

<LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="134dp"
            android:layout_height="match_parent">

        <Button
                android:text="信息查询"
                android:background="#E67350"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_queryS"
                app:icon="@android:drawable/ic_menu_search" />

        <Button
                android:text="宿舍分配"
                android:textSize="20sp"
                android:background="#E67350"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_distributeS"
                app:icon="@android:drawable/ic_menu_agenda" />

        <Button
                android:text="学生管理"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_stuMS"
                app:icon="@android:drawable/ic_menu_manage" />

        <Button
                android:text="出入\n登记"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E67350"
                android:id="@+id/btn_signS"
                app:icon="?attr/actionModePasteDrawable" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText
                    android:layout_width="131dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:hint="请输入学生姓名"
                    android:id="@+id/et_stuNameS" />

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:hint="请输入学生学号"
                    android:id="@+id/et_stuNoS" />

        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:hint="性别"
                    android:id="@+id/et_genderS"
                    android:layout_weight="1" />

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:hint="年龄"
                    android:id="@+id/et_ageS"
                    android:layout_weight="1" />

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:hint="年级"
                    android:id="@+id/et_gradeS"
                    android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:hint="所在院系"
                    android:id="@+id/et_collegeS"
                    android:layout_weight="1" />

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:hint="宿舍号"
                    android:id="@+id/et_dorNoS"
                    android:layout_weight="1" />
        </LinearLayout>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:hint="请输入电话号码"
                android:id="@+id/et_phoneS" />

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <Button
                    android:text="添加"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_addS"
                    android:layout_weight="1" />

            <Button
                    android:text="删除"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_delS"
                    android:layout_weight="1" />

            <Button
                    android:text="修改"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_modifyS"
                    android:layout_weight="1" />

            <Button
                    android:text="查询"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_queryStu"
                    android:layout_weight="1" />
        </LinearLayout>

        <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:id="@+id/listviewStu" />

    </LinearLayout>
</LinearLayout>
</LinearLayout>