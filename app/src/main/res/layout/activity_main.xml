<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity"
        android:background="#F3C0C0"
android:orientation="vertical">


    <TextView
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:textSize="25sp"
            android:gravity="center"
            android:background="#E67350"
            android:id="@+id/textView2"
            android:editable="false"
            android:duplicateParentState="false"
            android:foreground="@drawable/sys_dormitory" />

<LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="481dp"
        android:layout_weight="1">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="185dp">

        <TextView
                android:text="用户名:"
                android:textSize="25sp"
                android:layout_marginTop="110dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_weight="1" />

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:layout_marginTop="110dp"
                android:hint="请输入用户名......"
                android:id="@+id/et_username"
                android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="185dp">

        <TextView
                android:text="密    码:"
                android:textSize="25sp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:layout_weight="1" />

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:layout_marginTop="30dp"
                android:hint="请输入密码......"
                android:ems="10"
                android:id="@+id/et_pwd"
                android:layout_weight="1" />

    </LinearLayout>

    <Button
            android:textColorHighlight="@color/cardview_shadow_end_color"
            android:layout_gravity="center"
            android:layout_width="191dp"
            android:layout_height="76dp"
            android:id="@+id/btn_login"
            style="@android:style/Widget.Material.Button.Toggle"
            android:foreground="@drawable/login" />

</LinearLayout>

</LinearLayout>